<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head")%>
    <title>HomePage</title>
  </head> 
  <body>
    <%- include("./partials/nav")%>
    <div class="container mt-3">
      <div class="row row-cols-4">
      
      <% blogs.forEach(blog=>{%>
        <div class="col">
          <div class="card">
            <img src="<%= blog.coverImgURL%>"  width="100%" height="140rem"/>
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              
              <a href="/blog?id=<%=blog._id%>" class="btn btn-primary">View</a>
            </div>
      </div>
    </div>
    <% })%>
  </div>

    <%- include("./partials/scripts")%>
  </body>
</html>
